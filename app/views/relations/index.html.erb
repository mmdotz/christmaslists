
<h1>Clan Relations</h1>

<table class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Clan</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @relations.each do |relation| %>
        <tr>
          <td><%= relation.user.full_name %></td>
          <td><%= relation.clan.name %></td>
          <td><%= link_to 'Edit', edit_relation_path(relation) %></td>
          <td><%= link_to 'Remove relation from ' + relation.clan.name, relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</table>

<br>

<%= link_to 'New Relation', new_relation_path %>
