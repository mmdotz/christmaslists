
<h1>Clans and Relations (Families and their User Members)</h1>

<table class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>User/Relation</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clans.each do |clan| %>
        <tr>
          <td><%= clan.name %></td>
          <%= clan.relations.each do |relation| %> <!--each relation under clan -->
          <li><%= relation.user.first %></li>
          <% end %>
          <td><%= link_to 'Show', clan %></td>
          <td><%= link_to 'Edit', edit_clan_path(clan) %></td>
          <td><%= link_to 'Destroy', clan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</table>

<br>

