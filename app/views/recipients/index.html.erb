<p id="notice"><%= notice %></p>

<h1>Listing Recipients</h1>

<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>Size</th>
      <th>Notes</th>
      <th>First</th>
      <th>Last</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipients.each do |recipient| %>
      <tr>
        <td><%= recipient.age %></td>
        <td><%= recipient.size %></td>
        <td><%= recipient.notes %></td>
        <td><%= recipient.first %></td>
        <td><%= recipient.last %></td>
        <td><%= recipient.user %></td>
        <td><%= link_to 'Show', recipient %></td>
        <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
        <td><%= link_to 'Destroy', recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

